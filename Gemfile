  gem 'heroku'
  gem 'mysql'
end

group :production do
  gem 'pg'
  gem 'therubyracer'
end

group :test, :development do
  gem 'rspec-rails'
  gem 'object-factory'
  gem 'timecop'
  gem 'database_cleaner'
end