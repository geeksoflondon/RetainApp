# Active Admin
gem 'activeadmin'
gem "meta_search",    '>= 1.1.0.pre'

# Gems for image uploads
gem 'carrierwave'
gem 'fog'
gem 'rmagick'

#pdf stuff
gem 'prawn_rails'
gem 'barby'
